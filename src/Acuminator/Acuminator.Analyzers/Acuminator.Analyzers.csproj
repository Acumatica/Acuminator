<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Title>Acumatica.Analyzers</Title>
    <AssemblyTitle>Acumatica.Analyzers</AssemblyTitle>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2.0.0</Version>
    <PackageProjectUrl>https://github.com/Acumatica/Acuminator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Acumatica/Acuminator</RepositoryUrl>
    <Copyright>Copyright © 2017-2019 Acumatica Ltd.</Copyright>
    <PackageLicenseUrl>https://github.com/Acumatica/Acuminator/blob/dev/LICENSE</PackageLicenseUrl>
    <PackageReleaseNotes>https://github.com/Acumatica/Acuminator/blob/dev/docs/ReleaseNotes.md</PackageReleaseNotes>
    <LangVersion>latest</LangVersion>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\key.snk</AssemblyOriginatorKeyFile>
    <Company>Acumatica</Company>
    <Description>The static analyzers for Acumatica</Description>
    <Authors>Acumatica</Authors>
    <NeutralLanguage>en</NeutralLanguage> 
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommonServiceLocator" Version="2.0.4" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="2.6.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="2.9.0-beta4-63006-05" PrivateAssets="all" />
    <PackageReference Update="NETStandard.Library" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Acuminator.Utilities\Acuminator.Utilities.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PX.Common">
      <HintPath>..\..\..\lib\PX.Common.dll</HintPath>
    </Reference>
    <Reference Include="PX.Data">
      <HintPath>..\..\..\lib\PX.Data.dll</HintPath>
    </Reference>
    <Reference Include="PX.Data.BQL.Fluent">
      <HintPath>..\..\..\lib\PX.Data.BQL.Fluent.dll</HintPath>
    </Reference>
    <Reference Include="PX.DbServices">
      <HintPath>..\..\..\lib\PX.DbServices.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
